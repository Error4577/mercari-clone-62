.single__container
  %header.single__header
    %h1.logo
      %a.logo__link{href: "#"}
        %img.logo__image{alt: "mercari", src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2651893653"}/
    %nav.signup-bar
      %ol.clearfix.progress-bar
        %li.active
          会員情報
          .progress-bar__status.progress-bar__status--first
        %li.active
          電話番号認証
          .progress-bar__status
        %li.active.active-last
          お届け先住所入力
          .progress-bar__status
        %li
          支払い方法
          .progress-bar__status
        %li
          完了
          .progress-bar__status.progress-bar__status--last
  %main.single__main
    %section.l-single__container
      %h2.l-single__head.registration お届け先住所入力
      %form.l-single__inner.registration-form{action: "#", method: "POST"}
        %input{name: "#", type: "hidden", value: "#"}/
        .l-single__content
          .form__group
            %div
              %label お名前(全角)
              %span.form__require 必須
            %input.input-default.half{name: "last_name", placeholder: "例) 高野", type: "text", value: ""}/
            %input.input-default.half{name: "first_name", placeholder: "例) 和樹", type: "text", value: ""}/
          .form__group
            %div
              %label お名前カナ(全角)
              %span.form__require 必須
            %input.input-default.half{name: "last_name_kana", placeholder: "例) タカノ", type: "text", value: ""}/
            %input.input-default.half{name: "first_name_kana", placeholder: "例) カズキ", type: "text", value: ""}/
          .form__group
            %label{for: "phone_number"} 郵便番号
            %span.form__require 必須
            %input.input-default{name: "postal_code", placeholder: "例) 123-4567", type: "text"}
          .form__group
            %label{for: "prefecture"} 都道府県
            %span.form__require 必須
            .select-wrap
              %i.icon-arrow-bottom
              %select.select-default{name: "prefecture"}
          .form__group
            %label{for: "city_name"} 市区町村
            %span.form__require 必須
            %input.input-default{name: "city_name", placeholder: "例) 横浜市緑区", type: "text", value: ""}/
          .form__group
            %label{for: "block_number"} 番地
            %span.form__require 必須
            %input.input-default{name: "block_number", placeholder: "例) 青山1-1-1", type: "text", value: ""}/
          .form__group
            %label{for: "building_name"} 建物名
            %span.form__any 任意
            %input.input-default{name: "building_name", placeholder: "例) 柳ビル103", type: "text", value: ""}/
          .form__group
            %label{for: "phone_number"} 電話番号
            %span.form__any 任意
            %input.input-default{name: "phone_number", placeholder: "例) 09012345678", type: "tel"}
          %button.btn-default.btn-red{type: "submit"} 次へ進む
  = render partial: "iFooter"